<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.lms.mapper.BoardNoticeFileMapper">

	 <!-- 파일 등록 -->
    <insert id="insertNoticeFile"
            parameterType="com.example.lms.dto.BoardNoticeFile"
            useGeneratedKeys="true"
            keyProperty="fileId"
            keyColumn="file_id">
        INSERT INTO board_notice_file (
            notice_id,
            file_name,
            origin_name,
            file_size,
            file_type
        ) VALUES (
            #{noticeId},
            #{fileName},
            #{originName},
            #{fileSize},
            #{fileType}
        )
    </insert>

    <!-- 공지별 첨부파일 목록 -->
    <select id="selectFilesByNoticeId"
            parameterType="long"
            resultType="com.example.lms.dto.BoardNoticeFile">
        SELECT
            file_id     AS fileId,
            notice_id   AS noticeId,
            file_name   AS fileName,
            origin_name AS originName,
            file_size   AS fileSize,
            file_type   AS fileType,
            createdate
        FROM board_notice_file
        WHERE notice_id = #{noticeId}
        ORDER BY file_id
    </select>

    <!-- 단일 파일 조회 (다운로드/삭제 전 확인용) -->
    <select id="selectFileOne"
            parameterType="long"
            resultType="com.example.lms.dto.BoardNoticeFile">
        SELECT
            file_id     AS fileId,
            notice_id   AS noticeId,
            file_name   AS fileName,
            origin_name AS originName,
            file_size   AS fileSize,
            file_type   AS fileType,
            createdate
        FROM board_notice_file
        WHERE file_id = #{fileId}
    </select>

    <!-- 단일 파일 삭제 (file_id 기준) -->
    <delete id="deleteFileById" parameterType="long">
        DELETE FROM board_notice_file
        WHERE file_id = #{fileId}
    </delete>

    <!-- 특정 공지의 모든 파일 삭제 (notice_id 기준) -->
    <delete id="deleteFilesByNoticeId" parameterType="long">
        DELETE FROM board_notice_file
        WHERE notice_id = #{noticeId}
    </delete>

</mapper>